<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container"
    android:layoutDirection="ltr"
    tools:context="com.concough.android.concough.EntranceMultiDetailActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/entranceMultiDetailA_recycle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:background="@drawable/concough_bottom_line_gray3">

    </androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        app:itemTextColor="@drawable/concough_navigation_style"
        app:itemIconTint="@drawable/concough_navigation_style"
        app:menu="@menu/navigation"
        />
</LinearLayout>