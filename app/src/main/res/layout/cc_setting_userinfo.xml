<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical|center"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="right|end"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/concough_setting_border_user_icon_bottom"

                    android:gravity="top"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/settingUserInfoL_userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|end"
                        android:layout_marginBottom="12dp"
                        android:gravity="end"
                        android:text="TextView"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        tools:layout_editor_absoluteX="215dp"
                        tools:layout_editor_absoluteY="24dp" />

                    <TextView
                        android:id="@+id/settingUsereInfoL_lastUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginBottom="16dp"
                        android:gravity="right|end"
                        android:text="TextView"
                        android:textAlignment="textEnd"
                        android:textColor="@color/colorConcoughGray2"
                        android:textSize="12sp"
                        app:layout_constraintRight_toRightOf="@+id/settingUserInfoL_userName"
                        app:layout_constraintTop_toBottomOf="@+id/settingUserInfoL_userName" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/settingUserInfoL_editInformation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right|end"
                        android:text="@string/settingA_S_editInformations"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorConcoughBlue"
                        android:textDirection="rtl" />
                </LinearLayout>

            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImageView"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/male_icon_100"
                app:civ_border_color="@color/colorConcoughGray4"
                app:civ_border_width="0.8dp"
                app:civ_fill_color="@color/colorConcoughGray3"

                app:srcCompat="@drawable/no_image_placeholder" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/colorConcoughGray4"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>