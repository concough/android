<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.concough.android.concough.ArchiveDetailActivity">

    <android.support.constraint.ConstraintLayout

        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/concough_bottom_line_gray3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|right"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/archiveDetailHolder1L_logoImage"
            app:layout_constraintRight_toLeftOf="@+id/archiveDetailHolder1L_logoImage"
            app:layout_constraintTop_toTopOf="@+id/archiveDetailHolder1L_logoImage"
            app:layout_constraintVertical_bias="0.526"
            android:layout_marginRight="8dp">

            <TextView
                android:id="@+id/archiveDetailHolder1L_EntranceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="right"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/archiveDetailHolder1L_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="TextView"
                android:textAlignment="textEnd"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/archiveDetailHolder1L_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="TextView"
                android:textAlignment="textEnd"
                android:textColor="@color/colorConcoughGray"
                android:textSize="11sp" />
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/archiveDetailHolder1L_logoImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/male_icon_100"
            app:civ_border_color="@color/colorConcoughGray4"
            app:civ_border_width="0.8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/app_dropbox_icon" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>