<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.concough.android.concough">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <service android:name="com.concough.android.downloader.EntrancePackageDownloader" />

        <activity
            android:name=".StartupActivity"
            android:windowSoftInputMode="adjustPan">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".SignupActivity" />
        <activity android:name=".SignupCodeActivity" />
        <activity android:name=".SignupMoreInfo1Activity" />
        <activity android:name=".SignupMoreInfo2Activity" />
        <activity android:name=".SignupMoreInfo3Activity" />
        <activity android:name=".HomeActivity" />
        <!-- <activity android:name=".TestActivity"> -->


        <!-- <intent-filter> -->
        <!-- <action android:name="android.intent.action.MAIN" /> -->


        <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
        <!-- </intent-filter> -->
        <!-- </activity> -->
        <activity android:name=".ForgotPasswordActivity" />
        <activity android:name=".ResetPasswordActivity">

            <!-- <category android:name="android.intent.category.LAUNCHER" /> -->
            <!-- </intent-filter> -->
        </activity>
        <activity
            android:name=".ArchiveActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".ArchiveDetailActivity"
            android:theme="@style/AppThemeArchiveDetailActionBar" />
        <activity android:name=".SettingActivity" />
        <activity android:name=".ErrorReportActivity" android:windowSoftInputMode="adjustResize" />
        <activity android:name=".SettingsWebViewActivity" />
        <activity
            android:name=".BottomNavigationActivity"
            android:theme="@style/AppThemeArchiveActionBar" />
        <activity
            android:name=".EntranceDetailActivity"
            android:theme="@style/AppThemeArchiveActionBar" />
        <activity android:name=".BasketCheckoutActivity" />
        <activity android:name=".FavoritesActivity"></activity>
        <activity android:name=".SettingChangePasswordActivity" android:windowSoftInputMode="adjustResize" ></activity>
        <activity android:name=".EntranceShowActivity"
            android:theme="@style/AppTheme.NoActionBar"></activity>
